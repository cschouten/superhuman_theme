<section id="contentArea" class="container-fluid">
    <div class="row-fluid">
        <section id="main-content" class="span9">
            <div class="contentWrapper">
                <hgroup id="categoryHead">
                    <h1>{{t 'results' query=query count=results_count}}</h1>
                    <p class="descrip">{{
                        #if
                        results}}Found {{results_count}} results for "{{query}}"{{else}}No results found for
                        "{{query}}"{{
                        /if
                        }}</p>
                </hgroup>

                {{
                #if
                results}}
                <ul class="articleList">
                    {{
                    #each
                    results}}
                    <li><a href="{{url}}"><i class="icon-article-doc"></i><span>{{title}}</span></a></li>
                    {{
                    /each
                    }}
                </ul>
                {{else}}
                <div class="no-results">
                    <div class="headline">
                        {{t 'no_results_unified_start_new_search'}}
                    </div>
                    <div class="action-prompt">
                        {{t 'no_results_unified_enter_keywords'}}
                    </div>
                    <div class="action-prompt">
                        <a href="{{help_center.url}}">
                            {{t 'go_to_help_center'}}
                        </a>
                    </div>
                </div>
                {{
                /if
                }}
            </div>
        </section>

        <aside id="sidebar" class="span3">
      <form action="/hc/en-us/search" method="GET" id="searchBar" class="sm" autocomplete="off">
        <input type="text" name="query" title="search-query" class="search-query" placeholder="Search" value="" aria-label="Search">
        <button type="submit">
          <span class="sr-only">Toggle Search</span>
          <i class="icon-search"></i>
        </button>
      </form>
      <h3>Categories</h3>
      <ul class="nav nav-list">
        <li><a href="/hc/en-us/articles/38448760193939">Get Started<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/articles/38450004008595">Level Up<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/articles/38450322526995">Supercharge Your Team<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445089824531">Account Setup<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445127077651">Billing<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445149992467">Support<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445131555603">Features<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445115561875">Integrations<i class="icon-arrow"></i></a></li>
        <li><a href="/hc/en-us/categories/38445124666771">Use Cases<i class="icon-arrow"></i></a></li>
      </ul>
    </aside>
    </div>

    {{pagination}}
</section>