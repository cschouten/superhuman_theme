<section id="contentArea" class="container-fluid">
    <div class="row-fluid">
        <section id="main-content" class="span9">
            <div class="contentWrapper">
                <hgroup id="categoryHead">
                    <h1>{{t 'results' query=query count=results_count}}</h1>
                    <p class="descrip">{{
                        #if
                        results}}Found {{results_count}} results for "{{query}}"{{else}}No results found for
                        "{{query}}"{{
                        /if
                        }}</p>
                </hgroup>

                {{
                #if
                results}}
                <ul class="articleList">
                    {{
                    #each
                    results}}
                    <li><a href="{{url}}"><i class="icon-article-doc"></i><span>{{title}}</span></a></li>
                    {{
                    /each
                    }}
                </ul>
                {{else}}
                <div class="no-results">
                    <div class="headline">
                        {{t 'no_results_unified_start_new_search'}}
                    </div>
                    <div class="action-prompt">
                        {{t 'no_results_unified_enter_keywords'}}
                    </div>
                    <div class="action-prompt">
                        <a href="{{help_center.url}}">
                            {{t 'go_to_help_center'}}
                        </a>
                    </div>
                </div>
                {{
                /if
                }}
            </div>
        </section>

        <aside id="sidebar" class="span3">
            <form action="/search" method="GET" id="searchBar" class="sm" autocomplete="off">
                <input type="hidden" name="utf8" value="âœ“">
                <input type="text" name="query" title="search-query" class="search-query" placeholder="Search"
                    value="{{query}}" aria-label="Search">
                <button type="submit">
                    <span class="sr-only">Toggle Search</span>
                </button>
                <div id="serp-dd" style="display: none;" class="sb">
                    <ul class="result">
                        {{!-- Results will be populated by JavaScript --}}
                    </ul>
                </div>
            </form>

            <h3>Categories</h3>
            <ul class="nav nav-list">
                {{
                #each
                help_center.categories}}
                <li><a href="{{url}}">{{name}} <i class="icon-arrow"></i></a></li>
                {{
                /each
                }}
            </ul>
        </aside>
    </div>

    {{pagination}}
</section>