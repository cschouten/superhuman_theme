<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add click event to our custom search button
  document.querySelector('.search.search-full form').addEventListener('click', function(event) {
    // Check if the click was on or within the pseudo-element area
    const form = this;
    const formRect = form.getBoundingClientRect();
    const buttonArea = {
      top: formRect.top,
      left: formRect.right - 150, // Adjust based on button width
      width: 150,
      height: 64
    };
    
    // If the click is within the button area
    if (
      event.clientX >= buttonArea.left && 
      event.clientX <= buttonArea.left + buttonArea.width &&
      event.clientY >= buttonArea.top && 
      event.clientY <= buttonArea.top + buttonArea.height
    ) {
      // Submit the form
      form.submit();
    }
  });
});
</script>

