<section class="section hero">
  <div class="hero-inner">
    <h2>Looking for help?</h2>
    <div class="search-container">
      {{search submit=true instant=settings.instant_search class='search search-full'}}
    </div>
  </div>
</section>

<div class="container">
  <section class="section knowledge-base">
  <section class="categories blocks">
    <ul class="blocks-list">
      {{#each categories}}
        {{#if ../has_multiple_categories}}
          <li class="blocks-item">
            <a href='{{url}}' class="blocks-item-link">
              <div class="category-icon">
                {{#is name "Get Started"}}
                  <img src="{{settings.logo}}" alt="Get Started icon">
                {{else}}{{#is name "Level Up"}}
                  <img src="{{settings.rocket}}" alt="Level Up icon">
                {{else}}{{#is name "Supercharge Your Team"}}
                  <img src="{{settings.lightning}}" alt="Supercharge Your Team icon">
                {{else}}{{#is name "Account Setup"}}
                  <img src="{{settings.post_box_usa}}" alt="Account Setup icon">
                {{else}}{{#is name "Billing"}}
                  <img src="{{settings.credit_card}}" alt="Billing icon">
                {{else}}{{#is name "Support"}}
                  <img src="{{settings.heart}}" alt="Support icon">
                {{else}}{{#is name "Features"}}
                  <img src="{{settings.magnifying_glass}}" alt="Features icon">
                {{else}}{{#is name "Integrations"}}
                  <img src="{{settings.handshake}}" alt="Integrations icon">
                {{else}}{{#is name "Use Cases"}}
                  <img src="{{settings.sparkles}}" alt="Use Cases icon">
                {{else}}
                  <img src="{{settings.sparkles}}" alt="Category icon">
                {{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}
              </div>
              <div class="blocks-item-content">
                <span class="blocks-item-title">{{name}}</span>
                <span class="blocks-item-description">{{excerpt description}}</span>
              </div>
            </a>
          </li>
        {{else}}
          {{#each sections}}
            <li class="blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                <div class="category-icon">
                  {{#is name "Get Started"}}
                    <img src="{{settings.lightbulb}}" alt="Get Started icon">
                  {{else}}{{#is name "Level Up"}}
                    <img src="{{settings.rocket}}" alt="Level Up icon">
                  {{else}}{{#is name "Supercharge Your Team"}}
                    <img src="{{settings.lightning}}" alt="Supercharge Your Team icon">
                  {{else}}{{#is name "Account Setup"}}
                    <img src="{{settings.post_box_usa}}" alt="Account Setup icon">
                  {{else}}{{#is name "Billing"}}
                    <img src="{{settings.credit_card}}" alt="Billing icon">
                  {{else}}{{#is name "Support"}}
                    <img src="{{settings.heart}}" alt="Support icon">
                  {{else}}{{#is name "Features"}}
                    <img src="{{settings.magnifying_glass}}" alt="Features icon">
                  {{else}}{{#is name "Integrations"}}
                    <img src="{{settings.handshake}}" alt="Integrations icon">
                  {{else}}{{#is name "Use Cases"}}
                    <img src="{{settings.sparkles}}" alt="Use Cases icon">
                  {{else}}
                    <img src="{{settings.sparkles}}" alt="Category icon">
                  {{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}{{/is}}
                </div>
                <div class="blocks-item-content">
                  <span class="blocks-item-title">{{name}}</span>
                  <span class="blocks-item-description">{{excerpt description}}</span>
                </div>
              </a>
            </li>
          {{/each}}
        {{/if}}
      {{/each}}
    </ul>
  </section>
</section>
</div>